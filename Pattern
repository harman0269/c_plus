//Pattern InvertedHourGlass
#include<bits/stdc++.h>
using namespace std;
int main(){
    int n;
    cin>>n;
    
    for(int i=1;i<=n+1;i++){
        int count=n;
        for(int j=1;j<=n;j++){
            if(j<=i){
                cout<<count-j+1<<" ";
            }else{
                cout<<" "<<" ";
            }
            
        }
        for(int spaces=1;spaces<=n-i+1;spaces++){
            cout<<" "<<" ";
        }
        for(int j=n-i+1;j<=n;j++){
            cout<<j<<" ";
        }
        cout<<endl;
    }
    for(int i=1;i<=n;i++){
        int count=n;
        for(int j=1;j<=n+1;j++){
			if(j<=n-i+1){
				cout<<count<<" ";   
				count--;
        	}else{
				cout<<"  ";
			}
        
		}


		for(int j=1;j<=n;j++){
			if(j<=i-1){
				cout<<"  ";
			}else{
				cout<<j<<" ";
			}
		}
		
		cout<<endl;
    }
	

}
